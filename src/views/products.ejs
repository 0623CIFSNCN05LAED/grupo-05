<!DOCTYPE html>
<html lang="es">
    <head>
        <%- include("partials/head") %>  
        <link rel="stylesheet" href="/css/styles_Products.css">
        <link rel="stylesheet" href="/css/styles_Product-card.css">
        <title>DevVision - <%= title %></title>
    </head>

    <body class="bg-grey">

        <header class="header_style">    
            <%- include("partials/header") %>
        </header>
        <!-- todos los productos -->
        <div class="container products-wrapper">
            <div class="row">
                <div class="col-12">
                    <h2 class="products-title"><%= title %></h2>
                </div>
                <% console.log(allProducts); allProducts.forEach(product => { %>
                    <%- include("partials/product-card", {product}) %>
                    <% }) %>
            </div>
        </div>       
        <footer class="footer_style">
            <%- include("partials/footer") %>
        </footer>
</body>
</html>
